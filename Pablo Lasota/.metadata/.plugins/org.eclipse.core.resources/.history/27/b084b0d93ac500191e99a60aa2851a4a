#include <stdio.h>
#include <stdlib.h>


int main(void)
{
	int num;
	int aux;
	int max;
	int min;
	do
	{
		char verificar = 's';
		printf("Ingrese un numero:");
		scanf("%d\n",&num);
		aux = num;
		if(aux < num)
		{
			min = aux;
		}
		if(aux > num)
		{
			max = aux;
		}
		printf("Â¿Desea continuar?s/n\n");
		scanf("%s",&verificar);

	}while(verificar == 's');

	printf("El maximo numero ingresado es: %d",max);
	printf("El minimo numero ingresado es: %d",min);
}


